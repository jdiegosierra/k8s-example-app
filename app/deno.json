{
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-env main.ts",
    "test": "deno test --allow-net --allow-env tests/*",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno lint && deno fmt --check"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.13"
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "useTabs": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
